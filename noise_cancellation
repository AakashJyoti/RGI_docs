from pedalboard.io import AudioFile
from pedalboard import *
import noisereduce as nr
import soundfile as sf
sr=44100
#loading audio
with AudioFile('your_audio.wav').resampled_to(sr) as f:
    audio = f.read(f.frames)
#noisereduction
reduced_noise = nr.reduce_noise(y=audio, sr=sr, stationary=True, prop_decrease=0.75)
#enhancing through pedalboard
board = Pedalboard([
    NoiseGate(threshold_db=-30, ratio=1.5, release_ms=250),
    Compressor(threshold_db=-16, ratio=4),
    LowShelfFilter(cutoff_frequency_hz=400, gain_db=10, q=1),
    Gain(gain_db=2)
])

effected = board(reduced_noise, sr)
#saving enhanced audio
with AudioFile('/content/audio1_enhenced.wav', 'w', sr, effected.shape[0]) as f:
  f.write(effected)






import re
from rapidfuzz import process, fuzz
from typing import List, Tuple, Any

def normalize(s: str) -> str:
    s = s.lower()
    s = re.sub(r"[^\w\s]", "", s)      # remove punctuation
    s = re.sub(r"\s+", " ", s).strip() # collapse spaces
    return s

def find_similar_garages(
    user_input: str,
    garage_data: List[Tuple[str, Any]],
    threshold: int = 50,
    limit: int = 3
) -> List[Tuple[str, Any]]:
    """
    Returns full garage tuples with name similarity >= threshold.
    """
    # Extract names and normalize them
    garage_names = [garage[0] for garage in garage_data]
    norm_names = [normalize(name) for name in garage_names]
    norm_input = normalize(user_input)

    # Match using RapidFuzz
    results = process.extract(
        norm_input,
        norm_names,
        scorer=fuzz.WRatio,
        limit=limit
    )

    # Filter and return full tuples
    matches = [
        garage_data[idx]
        for _, score, idx in results
        if score >= threshold
    ]

    return matches









import re
from rapidfuzz import process, fuzz
from typing import List, Optional

def normalize(s: str) -> str:
    s = s.lower()
    s = re.sub(r"[^\w\s]", "", s)      # drop punctuation
    s = re.sub(r"\s+", " ", s).strip() # collapse whitespace
    return s

def find_similar_garages(
    user_input: str,
    garage_list: List[str],
    threshold: int = 50,
    limit: int = 3
) -> List[str]:
    """
    Returns up to `limit` garage names whose similarity score ≥ threshold.
    If none meet the threshold, returns an empty list.
    """
    # Precompute normalized names
    norm_list = [normalize(name) for name in garage_list]
    norm_input = normalize(user_input)
    
    # Get up to `limit` best matches [(match, score, idx), ...]
    results = process.extract(
        norm_input,
        norm_list,
        scorer=fuzz.WRatio,
        limit=limit
    )
    
    # Filter by threshold and map back to original names
    matches = [
        garage_list[idx]
        for _, score, idx in results
        if score >= threshold
    ]
    
    return matches

# Example usage
garages = [
    "Joe's Auto Repair",
    "Precision Garage Services",
    "Downtown Car Care",
    "Elite Auto Garage",
    "Joe's Premium Auto",
    "Downtown Garage Experts"
]

user_input = "Joe Auto Repar"
top3 = find_similar_garages(user_input, garages, threshold=50, limit=3)
print(top3)
# e.g. → ["Joe's Auto Repair", "Joe's Premium Auto"]

# If you only want the single best match, just call with limit=1:
best = find_similar_garages(user_input, garages, threshold=50, limit=1)
print(best)  
# e.g. → ["Joe's Auto Repair"]
